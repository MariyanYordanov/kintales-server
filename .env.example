# ============================
# KinTales Server â€” Environment
# ============================
# Copy this file to .env and fill in the values.

# --- Database ---
DB_ROOT_PASSWORD=change_me_strong_random_64_chars
DATABASE_URL=postgresql://kintales_app:app_password@localhost:5432/kintales
KINTALES_APP_DB_PASSWORD=change_me_app_password
KINTALES_ADMIN_DB_PASSWORD=change_me_admin_password
KINTALES_BACKUP_DB_PASSWORD=change_me_backup_password

# --- JWT ---
JWT_SECRET=change_me_random_64_chars
JWT_REFRESH_SECRET=change_me_different_random_64_chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# --- Google OAuth ---
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=https://api.kintales.com/api/auth/google/callback

# --- MinIO (S3 storage) ---
MINIO_ACCESS_KEY=change_me_random_20_chars
MINIO_SECRET_KEY=change_me_random_40_chars
MINIO_ENDPOINT=localhost
MINIO_PORT=9000

# --- Email (Postfix) ---
MAIL_DOMAIN=kintales.com
MAIL_FROM=noreply@kintales.com

# --- App ---
APP_URL=http://localhost:3000
API_PORT=3000
NODE_ENV=development
LOG_LEVEL=debug

# --- FCM (push notifications) ---
FCM_SERVER_KEY=your_firebase_server_key

# --- Encryption ---
PGCRYPTO_KEY=change_me_random_64_chars_for_sensitive_fields
